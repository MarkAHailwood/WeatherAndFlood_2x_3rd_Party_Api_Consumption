@model WeatherForecast


    <form asp-action="Index" method="post" role="form">
        
        <div class="form-group col-sm-12">
            <h3>Enter your city below:</h3>
            <label asp-for="Location" class="control-label"></label>
            <div>
                <input asp-for="Location" class="form-control input-group-sm col-md-5" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-5">
                <input type="submit" class="btn btn-primary" value="Submit Location" />
            </div>
        </div>
    </form>